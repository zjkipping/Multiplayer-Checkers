<UserControl x:Class="GameClient.InitialLoading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock FontSize="20" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
            Screen for Initial Loading
        </TextBlock>
        <Button Name="ChangeScreens" Content="Click Me!"  Width="150" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0" Click="ChangeScreens_Click"  />
    </Grid>
</UserControl>
